@import "../../../style/skin.wxss";

page {
	background-color: #fff;
}

.list {
	margin-top: 10rpx;
	background-color: #fff;
	width: 100%;
	display: flex;
	justify-content: flex-start;
	align-items: center;
	flex-wrap: wrap;
	padding: 0 20rpx;
}

.list .item {
	width: 50%;
	padding: 10rpx 15rpx 20rpx;
}

.list .item .item-inner {
	width: 100%;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	position: relative; 
}

.list .item .item-inner .mark {  
	background-color: var(--projectColor); 
	background-color: rgba(199, 135, 72, .8);
	top: 0;
	right: 10rpx;
	position: absolute;
	z-index: 9;
	font-size: 22rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	color: #fff;
	writing-mode: vertical-rl;
	padding:14rpx 4rpx;
	border-bottom-left-radius: 10rpx;
	border-bottom-right-radius: 10rpx; 
}


.list .item .item-inner image {
	width: 100%;
	height: 220rpx;
	border-radius: 10rpx; 
}

.list .item .item-inner .title {
	width: 100%;
	text-align: left;
	color: #333;
	font-size: 24rpx;
	margin-top: 20rpx;
}
 